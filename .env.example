# ===========================================
# Meridian EMS - Frontend Environment Variables
# ===========================================
# Copy this file to .env.local for development
# or .env.production for production builds
# ===========================================

# -----------------
# API Configuration
# -----------------
# Backend API URL (without trailing slash)
VITE_API_URL=http://localhost:5000/api/v1

# -----------------
# App Configuration
# -----------------
# Application name displayed across the app
VITE_APP_NAME=Meridian EMS
VITE_APP_TAGLINE=Smart Education Management System

# -----------------
# Contact Information
# -----------------
# Support email for help pages and footer
VITE_SUPPORT_EMAIL=support@meridian-ems.com
# Support phone number
VITE_SUPPORT_PHONE=+91 80 1234 5678
# Contact email for general inquiries
VITE_CONTACT_EMAIL=contact@meridian-ems.com
# Contact phone
VITE_CONTACT_PHONE=+91-9999999999
# Company address
VITE_COMPANY_ADDRESS=Bangalore, India

# -----------------
# Demo/Calendar Config
# -----------------
# Email to receive demo booking notifications
VITE_DEMO_BOOKING_EMAIL=your-email@gmail.com

# -----------------
# Feature Flags
# -----------------
# Enable/disable features
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=false

# -----------------
# Analytics (Optional)
# -----------------
# Google Analytics ID
VITE_GA_TRACKING_ID=
# Mixpanel Token
VITE_MIXPANEL_TOKEN=

# -----------------
# Social Links (Optional)
# -----------------
VITE_SOCIAL_TWITTER=
VITE_SOCIAL_LINKEDIN=
VITE_SOCIAL_GITHUB=
